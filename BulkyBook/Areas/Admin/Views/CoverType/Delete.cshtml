@model CoverType
@{
    ViewData["Title"] = "Delete";
} 

<form method="post" asp-action="DeleteCoverType">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Cover </h2>
        </div>
        <div class="row">
           <input asp-for="Id" hidden/>
            
            <div class="col-md-6">
                <div class="mt-2 mb-3">
                    <label class="form-label" asp-for="Name"> Name </label>
                    <input asp-for="Name" class="form-control" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 mt-2">
                <button class=" btn btn-danger me-2" type="submit" style="width:120px"> Delete </button>
                <a class="btn btn-warning" asp-area="Admin" asp-controller="CoverType" asp-action="Index" style="width:120px"> Back </a>   
            </div>
           
        </div>
    </div>
        
</form>



