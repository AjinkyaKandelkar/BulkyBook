@model IEnumerable<CoverType>

<div class="container-fluid">
    <div class="row pt-4 mb-2">
        
        <div class="col-12 text-end">
            <a  asp-area="Admin" asp-controller="CoverType" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle me-2"></i> Create Cover type </a>
        </div>
    </div>
</div>
<h1 class="mb-3">Cover Type</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Cover Type Id </th>
            <th> Cover Type Name </th>
            <th>  </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%"> @obj.Id </td>
                <td width="60%"> @obj.Name </td>
                <td width="30%" class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Admin"  asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"  class="btn btn-warning" > <i class="bi bi-pencil-square"></i> Edit </a>
                        <a asp-area="Admin"  asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger ms-2"> <i class="bi bi-trash"></i> Delete </a>
                    </div>
                </td> 
            </tr>
        }
    </tbody>
</table>

