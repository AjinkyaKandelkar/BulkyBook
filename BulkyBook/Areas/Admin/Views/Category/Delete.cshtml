@model Category
@{
    ViewData["Title"] = "Delete";
} 

<form method="post" asp-action="DeleteCategory" >
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create </h2>
        </div>
        <div class="row">
           <input asp-for="Id" hidden/>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Name"> Name </label>
                    <input asp-for="Name" class="form-control" disabled />
                   
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="DisplayOrder"> Order </label>
                    <input asp-for="DisplayOrder" class="form-control" disabled />
                    
                </div>
            </div>
            <div class="col text-end mt-2">
                <button class=" btn btn-danger me-2" type="submit" style="width:120px"> Delete </button>
                <a class="btn btn-warning" asp-controller="Category" asp-action="Index" style="width:120px"> Back </a>   
            </div>
           
        </div>
    </div>
        
</form>



