@model Category
@{
    ViewData["Title"] = "Create";
} 

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create </h2>
        </div>
        <div class="row">
            <div asp-validation-summary="All"></div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Name"> Name </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="DisplayOrder"> Order </label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
            </div>
            <div class="col text-end mt-2">
                <button class=" btn btn-danger me-2" type="submit" style="width:120px"> Create </button>
                <a class="btn btn-warning" asp-controller="Category" asp-action="Index" style="width:120px"> Back </a>   
            </div>
           
        </div>
    </div>
        
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
